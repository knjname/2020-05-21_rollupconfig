{
  // tsc should emit plain JavaScript and type declarations.
  "compilerOptions": {
    // babel does.
    "target": "ESNext",
    // rollup does.
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
